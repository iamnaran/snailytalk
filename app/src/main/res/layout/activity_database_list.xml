<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/color_snail"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:src="@drawable/torch_batman"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            android:padding="3dp"
            android:textColor="@color/color_white"
            android:textSize="30dp"/>
        <EditText
            android:id="@+id/database_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:maxLength="10"
            android:background="@color/color_white"
            android:hint="ID"
            android:padding="10dp"
            android:textSize="20sp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course"
            android:textColor="@color/color_white"
            android:textSize="30dp"/>
        <EditText
            android:id="@+id/database_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:maxLength="10"
            android:padding="10dp"
            android:background="@color/color_white"
            android:hint="Course Name"
            android:textSize="20sp"
            >
        </EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: "
            android:textColor="@color/color_white"
            android:textSize="30dp"/>
        <EditText
            android:id="@+id/database_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxLength="10"
            android:background="@color/color_white"
            android:layout_marginLeft="10dp"
            android:hint="Date"
            android:padding="10dp"
            android:textSize="20dp"
            >
        </EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time: "
            android:textColor="@color/color_white"
            android:textSize="30dp"/>
        <EditText
            android:id="@+id/database_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxLength="5"
            android:padding="10dp"
            android:background="@color/color_white"
            android:layout_marginLeft="10dp"
            android:hint="Time"
            android:textSize="20dp"
            >
        </EditText>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question: "
            android:textColor="@color/color_white"
            android:textSize="30dp"
            android:layout_gravity="center"/>
        <EditText
            android:id="@+id/database_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:maxLength="60"
            android:maxLines="2"
            android:padding="10dp"
            android:scrollbars="vertical"
            android:hint="Question"
            android:background="@color/color_white"
            android:textSize="20dp"
            >
        </EditText>

    </LinearLayout>
    
</LinearLayout>